{
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/pug": "^2.0.10",
    "@types/serve-favicon": "^2.5.7",
    "typescript": "^5.3.3"
  },
  "name": "app",
  "version": "1.0.0",
  "description": "OpenFeature KubeCon Demo",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "build": "tsc && cp -R public/ dist/",
    "build:image": "npm run build && docker build --progress=plain . -t docker.io/toddbaert/openfeature-kubecon24",
    "build:push": "npm run build:image && docker push docker.io/toddbaert/openfeature-kubecon24",
    "start": "npm run build && node dist/main.js",
    "flagd": "docker run -p 8013:8013 -v $(pwd)/flags:/etc/flagd/ -it --pull=always ghcr.io/open-feature/flagd:latest start --uri file:./etc/flagd/dev-flags.json"
  },
  "dependencies": {
    "@openfeature/flagd-provider": "^0.11.1",
    "@openfeature/server-sdk": "^1.12.0",
    "express": "^4.18.2",
    "pug": "^3.0.2",
    "serve-favicon": "^2.5.0"
  },
  "license": "Apache-2.0"
}
