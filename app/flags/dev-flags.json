{
  "$schema": "https://flagd.dev/schema/v0/flags.json",
  "flags": {
    "hex-color": {
      "state": "ENABLED",
      "defaultVariant": "grey",
      "variants": {
        "grey": "aaa",
        "green": "0a0",
        "yellow": "aa0",
        "red": "a00"
      },
      "targeting": {
        "if": [
          { ">=": [{ "var": "batteryPercentage" }, 50] },
          "green",
          {
            "if": [
              { ">=": [{ "var": "batteryPercentage" }, 25] },
              "yellow",
              {
                "if": [
                  { "<=": [{ "var": "batteryPercentage" }, 0, 25] },
                  "grey",
                  "red"
                ]
              }
            ]
          }
        ]
      }
    },
